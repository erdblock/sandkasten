extends ./layout.jade

block title
	| New Publishers (#{newPublisher.title})

block main
	h1 #{newPublisher.title}
	- if(readme){
	div(class="panel panel-info")
		div(class="panel-heading") #{newPublisher.title}
		div(class="panel-body")
			!{readme}
	- }
	div(class="panel panel-primary")
		div(class="panel-heading") Create
		div(class="panel-body")
			p Do you really want to create this publishers?
			form(role="form" method="post")
				+primaryButton("Create")
